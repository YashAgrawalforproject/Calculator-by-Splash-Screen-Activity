<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:paddingLeft="100dp"
    android:background="@drawable/splashcolor"
    tools:context=".SplashScreen">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="35dp"
    android:textColor="#11D6C3"
    android:layout_marginRight="20dp"
    android:layout_gravity="right"
    android:textStyle="italic"
    android:text="Digital Calculator"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#11D6C3"
        android:layout_gravity="right"
        android:text="Developed by"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:text="Yash Agrawal"
        android:textColor="#A4D3CB"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:srcCompat="@drawable/yash" />

    <TextView
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="Follow me: "
        android:textColor="#11D6C3"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/httpsgithub.comYashAgrawalforproject"
        android:layout_width="230dp"
        android:layout_height="76dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="https://github.com/YashAgrawalforproject/"
        android:textColor="#11D6C3"
        android:textSize="20dp"
        android:textStyle="normal" />

</LinearLayout>